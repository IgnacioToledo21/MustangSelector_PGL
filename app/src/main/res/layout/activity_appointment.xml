<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:scrollbars="vertical">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Si desea concertar una compra, complete este formulario"
        android:textSize="18sp"
        android:paddingBottom="16dp"
        android:gravity="center"/>

    <!-- Campo para Día de la cita -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Día de la cita"
        android:textSize="14sp"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccionar día"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"/>

    <!-- Campo para Hora de la cita -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hora de la cita"
        android:textSize="14sp"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccionar hora"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"/>

    <!-- Nombre del comprador -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="14sp"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="textPersonName"/>

    <!-- Apellido del comprador -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:textSize="14sp"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:inputType="textPersonName"/>

    <!-- Dirección del comprador -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:textSize="14sp"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección"
        android:inputType="text"/>

    <!-- Fecha de nacimiento -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento"
        android:textSize="14sp"
        android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/editTextBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seleccionar fecha de nacimiento"
        android:inputType="none"
        android:focusable="false"
        android:clickable="true"/>

    <!-- Botón Enviar -->
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"/>

</LinearLayout>
